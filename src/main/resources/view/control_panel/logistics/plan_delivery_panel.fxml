<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.text.*?>

<?import java.net.URL?>
<AnchorPane
    fx:id="mainContainer"
    xmlns:fx="http://javafx.com/fxml"
    xmlns="http://javafx.com/javafx"
    fx:controller="app.controllers.control_panel.logistics_coordinator_section.PlanDeliveryController"
    prefHeight="800"
    prefWidth="800">
    <BorderPane fx:id="background">
        <center>
            <BorderPane fx:id="mainContent" style="-fx-background-color: #fafafa;">
                <center>
                    <GridPane fx:id="deliveryGrid" hgap="10" vgap="10" style="-fx-padding: 20;">
                        <Label text="Outlet:"/>
                        <Text fx:id="outletComboBox"/>
                        <Label text="Reward:"/>
                        <ComboBox fx:id="rewardComboBox"/>
                        <Label text="Quantity:"/>
                        <TextField fx:id="quantityField"/>
                        <Label text="Shipment Date:"/>
                        <DatePicker fx:id="deliveryDatePicker"/>
                        <Button mnemonicParsing="false" onAction="#planDelivery" text="Plan delivery"/>
                    </GridPane>
                </center>
                <right>
                    <VBox minWidth="100">
                        <Text text="" fx:id="errorText"/>
                        <Button mnemonicParsing="false" onAction="#goBack" prefHeight="35.0" prefWidth="100.0" text="Go back"/>
                    </VBox>
                </right>
            </BorderPane>
        </center>
    </BorderPane>
</AnchorPane>