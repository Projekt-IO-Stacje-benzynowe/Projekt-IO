<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.text.*?>

<?import java.net.URL?>
<AnchorPane
    fx:id="mainContainer"
    xmlns="http://javafx.com/javafx"
    xmlns:fx="http://javafx.com/fxml"
    fx:controller="app.controllers.branch_panel.MainController"
    prefHeight="800"
    prefWidth="800">
    <BorderPane fx:id="background">
        <top>
            <HBox fx:id="topBar" prefHeight="60" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" prefWidth="-Infinity">
                <stylesheets>
                    <URL value="@/css/top.css"/>
                </stylesheets>
            </HBox>
        </top>
        <left>
            <VBox fx:id="sidebar" prefWidth="120" maxWidth="220" minWidth="100"/>
        </left>
        <center>
            <BorderPane fx:id="mainContent" style="-fx-background-color: #fafafa;">
                <top>
                </top>
                <left>
                </left>
                <center>
                    <StackPane fx:id="tablePane" alignment="CENTER">
                    </StackPane>
                </center>
                <right>
                    <VBox minWidth="100" prefWidth="200"
                          maxWidth="Infinity" style="-fx-background-color: #2196F3;">
                    </VBox>
                </right>
                <bottom>
                </bottom>
            </BorderPane>
        </center>
    </BorderPane>
    <!-- Sidebar -->
    <VBox fx:id="sidebarContainer"/>

</AnchorPane>