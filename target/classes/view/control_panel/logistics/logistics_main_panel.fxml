<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.text.*?>

<BorderPane
    fx:id="contentPane"
    xmlns="http://javafx.com/javafx"
    xmlns:fx="http://javafx.com/fxml"
    fx:controller="app.controllers.control_panel.logistics_coordinator_section.LogisticsMainController">
    <top>
        <HBox alignment="CENTER" spacing="10" >
            <Button mnemonicParsing="false" onAction="#goToViewRequests" prefHeight="35.0" prefWidth="100.0" text="View requests"/>

            <Button mnemonicParsing="false" onAction="#goToPlanDelivery" prefHeight="35.0" prefWidth="100.0" text="Plan a new delivery"/>

            <Button mnemonicParsing="false" onAction="#goToChooseDelivery" prefHeight="35.0" prefWidth="100.0" text="Choose a delivery\nto modify"/>
        </HBox>
    </top>
    <left>
    </left>
    <center>
        <StackPane fx:id="tablePane">
        </StackPane>
    </center>
    <right>
        <VBox minWidth="100">
            <Label text="Select an option:"/>
            <Text text="" fx:id="messageText"/>
        </VBox>
    </right>
    <bottom>
    </bottom>
</BorderPane>
